@model ProjectMVC.ViewModel.LoginUserViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #e0f7fa;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; background-color: #004d40; border-radius: 10px; color: #ffffff;">

        <!-- عرض رسالة إذا كانت موجودة -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["Message"]
            </div>
        }
        
        <h2 class="text-center mb-4">Login</h2>
        <form asp-action="SaveLogin">
            <div asp-validation-summary="All" class="text-warning mb-3"></div>
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" style="background-color: #ffffff; color: #004d40;" />
                <span asp-validation-for="UserName" class="text-warning"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" style="background-color: #ffffff; color: #004d40;" />
                <span asp-validation-for="Password" class="text-warning"></span>
            </div>
            <div class="form-group form-check mb-3">
                <input class="form-check-input" class="checkbox" asp-for="RememberMe" style="background-color: #ffffff;" />
                <label class="form-check-label" asp-for="RememberMe">@Html.DisplayNameFor(model => model.RememberMe)</label>
            </div>
            <div class="form-group mb-3">
                <button type="submit" class="btn btn-success w-100">Login</button>
            </div>
        </form>

        <div class="text-center">
            <p>Don't have an Account?</p>
            <a asp-action="Register" class="text-light text-decoration-none" >Create User</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
