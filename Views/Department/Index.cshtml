@model List<Department>
@{
    ViewData["Title"] = " Department Index";
}

<h1>Index</h1>
<a href="/Department/Add"class="btn btn-success">New</a>
<table class="table table-hover table-bordered">
    <tr>
        <th>ID </th>
        <th>Name</th>
        <th>Description</th>
      
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a href="/Department/Edit/@item.Id">Edit</a>
            </td>
            <td>
                <a href="/Department/Details/@item.Id">Details</a>
            </td>
            <td>
                <a href="/Department/Delete/@item.Id" class="btn btn-danger">Delete</a>
            </td>
            
        </tr>
    }
</table>
