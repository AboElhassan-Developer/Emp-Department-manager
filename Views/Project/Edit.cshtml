@* @model Project *@
@model ProjectMVC.ViewModel.EditProjectModel

@{
    ViewData["Title"] = "Edit Project";
}

<h1>Edit Project</h1>

<form method="post" action="/Project/SaveEdit/@Model.Id">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input type="date" name="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input type="date" name="EndDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Budget</label>
        <input type="number" name="Budget" class="form-control" value="@Model.Budget" />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="Description" class="form-control">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a href="/Project/Index" class="btn btn-secondary">Cancel</a>
</form>

